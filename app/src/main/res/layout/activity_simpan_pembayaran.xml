<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan Tambahkan Pembayaran"
        android:textColor="#2B261C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="133dp"
        android:layout_height="165dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/payment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imageView16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <Spinner
            android:id="@+id/spinner_pesan_jasa"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@drawable/shape2"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_nama"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@drawable/shape2"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/jumlahbayar6"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape2"
            android:hint="Jumlah Bayar"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/metodebayar6"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape2"
            android:hint="Metode Bayar"
            android:textColor="#000000"
            android:textColorHint="#000000" />


        <EditText
            android:id="@+id/tanggalbayar6"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape2"
            android:hint="Tanggal Bayar"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/btn_pembayaran"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:backgroundTint="#1F0057"
            android:text="Bayar"
            android:textColor="#FDFDFD"
            android:textColorLink="#172E4B" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
