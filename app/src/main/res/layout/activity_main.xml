<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#5AB2FF"
    app:circularflow_defaultRadius="15dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#A0DEFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Aplikasi Pemesanan Laundry"
                android:textAlignment="center"
                android:textColor="#02284B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/pelanggan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#CAF4FF"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/customer" />

                        <TextView
                            android:id="@+id/textView8a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Pelanggan"
                            android:textAlignment="center"
                            android:textColor="#0F0E0E"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdLokasi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/layanan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#CAF4FF"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/layanan1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/laundry" />

                        <TextView
                            android:id="@+id/textView8b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Layanan"
                            android:textAlignment="center"
                            android:textColor="#050505"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdPetugas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#C8ACD6"
                    app:cardBackgroundColor="#CAF4FF"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/petugas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/petugas1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="17dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/admin" />

                        <TextView
                            android:id="@+id/textView8c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Petugas"
                            android:textAlignment="center"
                            android:textColor="#141414"
                            android:textSize="16sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#D0B8A8"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/kain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#CAF4FF"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/kain" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Kain"
                            android:textAlignment="center"
                            android:textColor="#020202"
                            android:textSize="16sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="361dp"
        android:layout_height="44dp"
        android:background="@drawable/shape2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.859">

        <LinearLayout
            android:id="@+id/PesanJasa"
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pesanan"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/pesanan10" />

            <TextView
                android:id="@+id/textView90"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Pesanan Jasa"
                android:textColor="#000000"
                android:textColorLink="#000000" />

            <Button
                android:id="@+id/pesan_jasa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#A0DEFF"
                android:text="Pesan"
                android:textColor="#000000"
                android:textColorLink="#FFFFFF" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:background="@drawable/shape2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bayar"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/bayar" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Pembayaran"
                android:textColor="#000000"
                android:textColorLink="#000000" />

            <Button
                android:id="@+id/pembayaran"
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#A0DEFF"
                android:text="Bayar"
                android:textColor="#000000" />
            <!--                android:textColor="#00000"-->
            <!--                android:textColorLink="#00000"/>-->

        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>